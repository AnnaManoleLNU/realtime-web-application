<h1>Update issue</h1>
<br>
<img src="<%= viewData.image %>" alt="User avatar">
<br>
<br>

<!-- Create a form for editing the title and description -->
<form class="row g-3" method="post" action="./issues/<%= viewData?.id %>/update">
  <div class="col-12">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" name="title" value="<%= viewData?.title %>">
  </div>
  <div class="col-12">
    <label for="description" class="form-label">Description</label>
    <input type="text" class="form-control" id="description" name="description" value="<%= viewData?.description %>">
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Update</button>
  </div>
</form>

<!-- If it's open, run the close method -->
<% if (viewData?.state === 'opened') { %>
  <form class="row g-3" method="post" action="./issues/<%= viewData?.id %>/close">
    <div class="col-12">
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="doneCheck" name="done">
          <label class="form-check-label" for="doneCheck">
            Mark issue as closed
          </label>
          
      </div>
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
  </form>
<% } %>

<!-- If it's closed, run the open method -->
<% if (viewData?.state === 'closed') { %>
  <form class="row g-3" method="post" action="./issues/<%= viewData?.id %>/open">
    <div class="col-12">
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="doneCheck" name="done" checked>
          <label class="form-check-label" for="doneCheck">
            Mark issue as closed
          </label>
          
      </div>
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
  </form>
<% } %>
